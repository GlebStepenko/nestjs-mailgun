{
  "name": "@gleb216/nestjs-mailgun",
  "version": "3.0.9",
  "description": "NestJS provider for sending emails with mailgun",
  "author": "GlebStepenko <gleb216@gmail.com>, Nuno Carvalh√£o <nuno.carvalhao@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublish": "npm run build",
    "publish:npm": "npm publish --access public",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "mailgun",
    "emails"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GlebStepenko/nestjs-mailgun"
  },
  "bugs": {
    "url": "https://github.com/GlebStepenko/nestjs-mailgun/issues"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.1.0"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "mailgun.js": "^12.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/testing": "^11.0.12",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^22.13.13",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.1.0",
    "tslint": "^5.20.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/GlebStepenko/nestjs-mailgun/blob/master/README.md"
}

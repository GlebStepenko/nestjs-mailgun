{
  "name": "@gleb216/nestjs-mailgun",
  "version": "3.0.4",
  "description": "NestJS provider for sending emails with mailgun",
  "author": "GlebStepenko <gleb216@gmail.com>, Nuno Carvalh√£o <nuno.carvalhao@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublish": "npm run build",
    "publish:npm": "npm publish --access public",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "mailgun",
    "emails"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GlebStepenko/nestjs-mailgun"
  },
  "bugs": {
    "url": "https://github.com/GlebStepenko/nestjs-mailgun/issues"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.4"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "mailgun.js": "^7.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/common": "^9.0.4",
    "@nestjs/core": "^9.0.4",
    "@nestjs/platform-express": "^9.0.4",
    "@nestjs/testing": "9.0.4",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "18.0.6",
    "@types/supertest": "2.0.12",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.0.0",
    "tslint": "6.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/GlebStepenko/nestjs-mailgun/blob/master/README.md"
}
